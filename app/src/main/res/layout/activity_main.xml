<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.safsaf.projectnoon.MainActivity">

   <ImageView
       android:id="@+id/image1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/noon"
       android:scaleType="centerCrop"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Noon For Education"
       android:background="#43a047"
       android:padding="5dp"
       android:textSize="20sp"
       android:textColor="#ffffff"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="16dp"
       android:layout_below="@+id/image1"
       android:layout_alignParentStart="true"
       android:layout_marginStart="22dp" />

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:src="@drawable/ic_location_on"

       android:layout_below="@+id/textView"
       android:layout_alignStart="@+id/textView"
       android:layout_marginStart="10dp" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="The second quarter, Axis Kafrawi,Hijaz Mall"
       android:layout_below="@+id/textView"
       android:layout_toEndOf="@+id/imageView"
       android:layout_marginStart="9dp"
       android:layout_marginTop="8dp" />
   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_call"
       android:layout_below="@+id/imageView"
       android:layout_alignStart="@+id/imageView" />
   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0111 015 4105"
       android:layout_below="@+id/imageView"
       android:layout_alignStart="@+id/textView1"
       android:layout_marginTop="7dp" />
   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_schedule"
       android:layout_below="@+id/imageView1"
       android:layout_alignStart="@+id/imageView1" />
   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="All days of the week except Fridays from 12 pm to 5 pm"
       android:layout_marginTop="7dp"
       android:layout_below="@+id/imageView1"
       android:layout_alignStart="@+id/textView2" />
   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="What's It?"
       android:background="#43a047"
       android:padding="5dp"
       android:textSize="20sp"
       android:textColor="#ffffff"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="16dp"
       android:layout_below="@+id/imageView2"
       android:layout_alignStart="@+id/textView" />
   <ImageView
       android:id="@+id/imageView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_assistant"
       android:layout_below="@+id/textView5"
       android:layout_alignParentStart="true" />
   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="The idea of eradicating illiteracy from the roots,"
       android:layout_marginTop="22dp"
       android:layout_below="@+id/textView4"
       android:layout_toEndOf="@+id/imageView3" />
   <TextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="facing the problem of dropout from education,"
       android:layout_below="@+id/textView5"
       android:layout_toEndOf="@+id/imageView3" />
   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="education of working children,"
       android:layout_below="@+id/textView6"
       android:layout_toEndOf="@+id/imageView3" />
   <TextView
       android:id="@+id/textView8"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="street children and students of schools unable"
       android:layout_alignStart="@+id/textView7"
       android:layout_below="@+id/textView7" />




</RelativeLayout>
